@import '../../stylus/variables.styl'
@import '../../stylus/mixins.styl'

.pull-request
  flex()
  color: text_color
  flex-flow: row
  padding 20px 0
  width 100%

  a
    text-decoration: none
    color main_color

  &__info
    padding-right: 2.5%
    flex(flex-end)
    width 40%
    flex-flow column

  &__signed
    padding: 10px 0

  &__reactions
    width 50%
    height 100%

  &__vote
    flex()
    font-size: 1.2em
    > a
      display: inline-block
      padding 5px 10px
      margin-left 10px
      border-radius: border_radius_size
      border: 4px solid main_color
      position relative
      overflow hidden
      transition: all 250ms ease-in-out

      &:hover
        box-shadow: 0 4px 10px 2px rgba(main_color, 20%)
        &::after
          transform rotate(20deg) translate(-45%, -35%)

      &::after
        content: ''
        position absolute
        left 0
        top: 0
        right 0
        height 115px
        background: rgba(main_color, 20%)
        transform: rotate(20deg) translate(55%, -35%)
        transition: all 250ms ease-in-out


  &__user-avatar
    height avatar_size_pull_request
    border-radius 50%
    border avatar_border_size dotted main_color
    box-shadow 0 6px 4px rgba(main_color, 20%)