.pull-request
  align-items: center
  color: #666
  display: flex
  flex-flow: column wrap
  margin: 15px 0
  justify-content: space-around

  a
    color: rgba(235, 0, 125, 80%)
    font-weight: bold
    text-decoration: none

  &__details
    align-items: center
    display: flex
    justify-content: space-between
    width: 50%

    &__avatar
      border-radius: 50%
      border: 4px solid rgba(235, 0, 125, 80%)
      height: 60px
      margin-right: 10px
      width: 60px

    &__vote
      margin-left: 50px