@import '../../stylus/variables.styl'
@import '../../stylus/mixins.styl'

.pull-request
  flex()
  color: text_color
  flex-flow: row
  padding 20px 0
  width 100%

  a
    text-decoration: none
    color main_color

  &__info
    padding-right: 2.5%
    flex(flex-end)
    width 40%
    flex-flow column

  &__signed
    padding: 10px 0

  &__reactions
    width 50%
    height 100%

  &__vote
    flex()
    font-size: 1.2em
    > a
      display: inline-block
      padding 5px 10px
      margin-left 10px
      border-radius: border_radius_size
      border: 4px solid main_color
      position relative
      overflow hidden
      transition: all 250ms ease-in-out

      &:hover
        box-shadow: 0 4px 10px 2px rgba(main_color, 20%)
        &::after
          transform rotate(20deg) translate(-45%, -35%)

      &::after
        content: ''
        position absolute
        left 0
        top: 0
        right 0
        height 115px
        background: rgba(main_color, 20%)
        transform: rotate(20deg) translate(55%, -35%)
        transition: all 250ms ease-in-out


  &__user-avatar
    height avatar_size_pull_request
    position relative
    > img
      height 100%
      border-radius 50%
      border avatar_border_size dotted main_color
      box-shadow 0 6px 4px rgba(main_color, 20%)
    > div
      flex()
      background-color: red
      border-radius 50%
      color #fff
      font-size 1.6em
      height 40px
      width 40px
      position absolute
      right -5px
      top -5px
      user-select none
      &[data-position='1']
        background-color winners_gold
        box-shadow: 0 4px 10px 1px rgba(darken(winners_gold, 20%), 80%) inset
        border: 4px solid darken(winners_gold, 20%)
      &[data-position='2']
        background-color winners_silver
        box-shadow: 0 4px 10px 1px rgba(darken(winners_silver, 20%), 80%) inset
        border: 4px solid darken(winners_silver, 20%)
      &[data-position='3']
        background-color winners_bronze
        box-shadow: 0 4px 10px 1px rgba(darken(winners_bronze, 20%), 80%) inset
        border: 4px solid darken(winners_bronze, 20%)