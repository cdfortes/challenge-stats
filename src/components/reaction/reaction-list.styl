.reaction-list
  align-items: center
  display: flex
  flex-flow: row wrap
  justify-content: center
  width: 100%

  &__counter
  &__users
    width: 45%
    display: flex

  &__users
    align-items: center
    flex-flow: row wrap
    justify-content: flex-start
    padding: 10px 25px

  &__counter
    justify-content: flex-end
    width: 50%
    &__total
    &__unique
      background: linear-gradient(to bottom, rgba(235, 0, 125, 80%), darken(rgba(235, 0, 125, 80%), 40%))
      font-size: .8em
      color: #fff
      border-radius: 50%
      display: flex
      align-items: center
      justify-content: center
      flex-flow: column wrap
      width: 100px
      height: 100px
      margin: 0 5px
      > span
        font-size: 2em
        font-weight: bold